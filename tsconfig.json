{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2020",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "declaration": true,
    "lib": [
      "es2020"
    ],
    "paths": {
      "*": [
        "node_modules/*",
        "typings/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
